<Window x:Class="fewd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FEWD" Height="200" Width="200" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
  <Grid MouseDown="Grid_MouseDown" Background="#01FFFFFF">
    <TextBox x:Name="textBox" Text="?:\" Height="23" Margin="10,10,45,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    <Image Margin="10,38,10,10">
      <Image.Source>
        <BitmapImage  UriSource="/Resources/oppy.png" />
      </Image.Source>
    </Image>
    <Button x:Name="button" Content="?" Margin="160,10,10,0" Click="Button_Click" Height="23" VerticalAlignment="Top"/>
  </Grid>
</Window>
